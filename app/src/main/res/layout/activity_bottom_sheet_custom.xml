<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:text="@string/scroll_layout_behavior_description"
        android:padding="16dp"
        android:layout_height="wrap_content"/>

    <FrameLayout
        app:layout_behavior="com.wenky.design.module.bottom_sheet_custom.BottomSheetCustomBehavior"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/frame_layout"
        android:background="#CCC"
        app:behavior_half_expanded_space="0dp"
        app:behavior_full_expanded_space="225dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--在底部的内容-->
        <LinearLayout
            android:layout_width="match_parent"
            android:background="#1AF"
            android:layout_height="200dp"/>
        <!--上拉后的内容-->

        <View
            android:background="#FA1"
            android:layout_width="match_parent"
            android:layout_height="1800dp"/>
    </FrameLayout>

</android.support.design.widget.CoordinatorLayout>